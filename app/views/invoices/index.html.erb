<p style="color: green"><%= notice %></p>

<%= form_tag invoices_path, :method => 'get' do %>
  <div class="text-center mt-4 name">
    <h3>Filters</h3>
  </div>
  <div class="form-field d-flex">
    <%= text_field_tag :id, params[:id], placeholder: 'Insert id here' %>
    <%= submit_tag "Filter by id", :name => nil, class: "btn mt-3" %>
  </div>
  <br>
  <div class="form-field d-flex">
    <%= date_field_tag :start_date, params[:start_date] %>
    <%= date_field_tag :end_date, params[:end_date] %>
    <%= submit_tag "Filter by creation date", :name => nil, class: "btn mt-3" %>
  </div>
<% end %>

<br><br>

<div class="container">
  <div style="display: flex; justify-content: space-evenly;">
    <h2>Invoices</h2>
    <%= link_to "Create a new invoice", new_invoice_path, style: "margin-top: 5px;" %>
  </div>
  <ul class="responsive-table">
    <li class="table-header">
      <div class="col col-1">Invoice ID</div>
      <div class="col col-2">Creation date</div>
    </li>
    <% @invoices.each do |invoice| %>
      <li class="table-row">
          <div class="col col-1"><%= link_to "Invoice ##{invoice.id}", invoice %></td></div>
          <div class="col col-2"><%= invoice.created_at.strftime('%d-%m-%Y') %></td></div>
      </li>
    <% end %>
  </ul>
</div>
