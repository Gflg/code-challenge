<h1>Login</h1>

<% if flash.now[:alert] %>
  <p style="color: red"><%= flash.now[:alert] %></p>
<% end %>

<p style="color: green"><%= notice %></p>

<br>

<%= form_with url: login_path, scope: :user do |form| %>
  <div>
    <%= form.label :token %>
    <%= form.text_field :token, required: true %>
  </div>
  <%= form.submit "Sign In" %>
<% end %>